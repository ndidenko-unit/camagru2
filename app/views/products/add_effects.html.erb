
<div class="panel panel-primary">
  <div class="panel-body">
    <%= image_tag @product.image, class: 'img-thumbnail img-responsive center-block' if @product.image? %>
    <%= '<center><br><strong>'.html_safe + @product.user.email + ':</strong> '
        .html_safe + @product.name + '</center>'.html_safe %>
  </div>
  <% if current_user.id == @product.user.id %>
    <div class="panel-footer">
      <strong>Add effect to photo: </strong><br>
      <%= form_for(@product) do |f| %>
        <%= radio_button_tag :frame_name, 'original' %> Original<br>
        <%= radio_button_tag :frame_name, 'happy' %> Happy<br>
        <%= radio_button_tag :frame_name, 'cake' %> Cake<br>
        <%= radio_button_tag :frame_name, 'rocket' %> Rocket<br>
        <%= hidden_field_tag 'user_id', current_user.id %>
        <%= f.hidden_field :image %>
        <%= f.label :image %>: <br />
        <%= f.label :name %><br>
        <%= f.text_field :name, class: 'form-control' %>
        <%= submit_tag 'Save post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
